<div class="w-full max-w-[500px] mx-auto flex flex-col justify-center">
<h2 class="text-center mb-0">Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.label :email, class: "hidden" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email", class:
                       'mt-1 block w-full rounded-md border border-black shadow-sm focus:border-black' %>
  </div>

  <div class="field">
    <%= f.label :password, class: "hidden" %><br />
    <%= f.password_field :password, autocomplete: "current-password", placeholder: "Password", class:
                       'mt-1 block w-full rounded-md border border-black shadow-sm focus:border-black' %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="actions my-5">
    <%= f.submit "Log in", class:
              'bg-gray-500 text-white w-full m-0 border border-black shadow-black p-2 rounded hover:shadow-none cursor-pointer' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>
