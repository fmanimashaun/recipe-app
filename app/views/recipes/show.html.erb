<div class="w-full max-w-[500px] mx-auto flex flex-col justify-center">
  <h2 class="text-center mb-0"><%= @recipe.name %></h2>
  <div class="flex justify-between">
    <p>
      Preparation Time: <%= @recipe.preparation_time %> <%=
        'hour'.pluralize(@recipe.preparation_time)
      %>
    </p>

    <p>Public: <%= @recipe.public ? 'Yes' : 'No' %></p>
  </div>
  <div class="flex justify-between">
    <p>
      Cooking Time: <%= @recipe.cooking_time %> <%=
        'hour'.pluralize(@recipe.cooking_time)
      %>
    </p>
  </div>

  <div class="flex justify-between">
    <h3>Steps go here...</h3>
  </div>

  <div class="flex justify-between border-b-2 border-gray-500 pb-5">
    <button
      class="m-0 border border-black shadow-black p-2 rounded hover:shadow-none cursor-pointer"
    >
      Generate Shopping lis
    </button>
    <button
      class="m-0 border border-black shadow-black p-2 rounded hover:shadow-none cursor-pointer"
    >
      Add Ingredient
    </button>
  </div>

