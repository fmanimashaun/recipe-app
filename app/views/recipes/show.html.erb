    <thead class="font-medium dark:bg-neutral-300">
      <tr>
        <th class="px-4 py-2 text-center">Food</th>
        <th class="px-4 py-2 text-center">Quantity</th>
        <th class="px-4 py-2 text-center">Value</th>
        <th class="px-4 py-2 text-center">Action</th>
      </tr>
    </thead>
    <tbody>
      <tr class="dark:bg-neutral-100">
        <td class="px-4 py-2 text-center">Item 1</td>
        <td class="px-4 py-2 text-center">2</td>
        <td class="px-4 py-2 text-center">$10</td>
        <td class="px-4 py-2 text-center">Modify, remove</td>
      </tr>
      <tr>
        <td class="px-4 py-2 text-center">Item 2</td>
